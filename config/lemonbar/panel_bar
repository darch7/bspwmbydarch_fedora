#!/bin/bash

#     @@@@@@@    @@@@@@   @@@  @@@  @@@@@@@@  @@@
#     @@@@@@@@  @@@@@@@@  @@@@ @@@  @@@@@@@@  @@@
#     @@!  @@@  @@!  @@@  @@!@!@@@  @@!       @@!
#     !@!  @!@  !@!  @!@  !@!!@!@!  !@!       !@!
#     @!@@!@!   @!@!@!@!  @!@ !!@!  @!!!:!    @!!
#     !!@!!!    !!!@!!!!  !@!  !!!  !!!!!:    !!!
#     !!:       !!:  !!!  !!:  !!!  !!:       !!:
#     :!:       :!:  !:!  :!:  !:!  :!:        :!:
#      ::       ::   :::   ::   ::   :: ::::   :: ::::
#      :         :   : :  ::    :   : :: ::   : :: : :

. panel_colors

num_mon=$(bspc query -M | wc -l)
while read -r line ; do
	case $line in
		N*)
			# CONEXIONES
			if [ ${line#??} == "wlp3s0" ]
			then
			red_icono="%{F$COLOR_RED_FG}%{A:st -e nmtui:}%{A}"
			ssid=$(iwgetid -r)
			wifi=$(cat /proc/net/wireless | awk 'NR==3 {printf "%0.0f%%\n", $3/70*100}')
			elif [[ ${line#??} =~ "enp0s25" ]]
			then
			red_icono="%{F$COLOR_ETHERNET}%{A:st -e nmtui:}%{A}" 
			ssid="Cableado"
			wifi=""
			else
			red_icono="%{F$COLOR_NORED}%{A:st -e nmtui:}%{A}" 	  
			ssid="No Internet (T_T)"
			wifi=""
			fi
			;;
		T*)
			# TUTILO DE VENTANA
			titulo="%{F$COLOR_TITLE_FG}%{B$COLOR_TITLE_BG} ${line#?} %{B-}%{F-}"	
			;;
		VS*)
			# ICONO DE VOLUMEN
			if [ ${line#??} == "on" ]
			then
			volume_state=`echo -e ""`
			else
			volume_state=`echo -e ""`
			fi
			;;
		VI*)
			# PORCENTAJE DE VOLUMEN
			volume="%{T1}${line#??}"
			;;
		BI*)
			# CARGA DE BATERIA
			charge="${line#??}"
			if [ $charge -lt "12" ]  
			then
			dunstify -i $HOME/.config/dunst/iconpng/cargar1.png ¡BATERIA_MUY_BAJA! 
			batt=`echo -e ""`
			elif [ $charge -lt "32" ] 
			then
			dunstify -i $HOME/.config/dunst/iconpng/cargar.png ¡BATERIA_BAJA!   
			batt=`echo -e ""`
			elif [ $charge -lt "62" ]
			then
			batt=`echo -e ""`
			elif [ $charge -lt "87" ]
			then
			batt=`echo -e ""`
			else
			batt=`echo -e ""`
			fi
			charge=`echo -e "$charge"`
			;;
		BS*)
			# ESTADO DE BATERIA
			if [ ${line#??} == "Charging" ]
			then
			batt_state=`echo -e ""`
			elif [ ${line#??} == "Full" ]
			then
			batt_state=`echo -e ""`
			else
			batt_state=""
			fi
			;;
		BC*)
			# ESTADO DE BATERIA DAÑADA O EN MAL ESTADO
			if [ ${line#??} == "Unknown" ]
			then
			bateria_mala=%{F$color2}`echo -e ""`
			else
			bateria_mala=""
			fi
			;;
 		X*)
			# BANDEJA DEL SISTEMA
			fecha=$(date | awk '{print $1","" "$2" "$3}')
			brillo=$(light | sed 's/\..*/%/')
			horas=$(clock | awk '{print $2}')
			temp_cpu=$(temp | awk '{print $1-0}')
			kernel=$(uname -a | awk '{ print $1" "$3" "$8 }')
			vol=$(volume | awk '{print $2"%"}')			
			cpu=$(top -bn1 | grep "Cpu" | awk 'NR==1 {print $2}')
			ram=$(free | grep Mem | awk '{printf("%.f%\n",$3/$2 * 100.0)}')
			mem=$(free -h --kilo | awk 'NR==2 { print $3}')
			lluvia=$(sed '16q;d' "$HOME/.config/weatherreport" | grep -wo "[0-9]*%" | sort -rn | sed "s/^/ /g;1q" | tr -d '\n')
			temp_baja=$(sed '13q;d' "$HOME/.config/weatherreport" | grep -o "m\\([-+]\\)*[0-9]\\+" | sort -n -t 'm' -k 2n | sed -e 1b -e '$!d' | tr '\n|m' ' ' | awk '{print "   " $1"°"}')
			temp_alta=$(sed '13q;d' "$HOME/.config/weatherreport" | grep -o "m\\([-+]\\)*[0-9]\\+" | sort -n -t 'm' -k 2n | sed -e 1b -e '$!d' | tr '\n|m' ' ' | awk '{print "   " $2"°"}')
			systray="%{F$COLOR_CLIMA_FG}${lluvia}${temp_baja}${temp_alta}  |  %{F$COLOR_RAM_FG} ${mem}(${ram})  |  %{F$COLOR_CPU_FG} ${cpu}%  |  %{F$COLOR_TMP_FG} ${temp_cpu}°  | %{F$COLOR_VOL_FG}${volume_state} ${volume}%  | %{F$COLOR_BRILLO} ${brillo} |  %{F$COLOR_SYS_FG}%{B$COLOR_SYS_BG} ${fecha} /  ${horas}  |  %{F$COLOR_BAT_FG} ${ateria_mala}${batt_state} ${batt} %{F$COLOR_BAT_PORCENTAJE}${charge}%  |  ${red_icono} ${wifi}  ${ssid}    "
			;;
	
		W*)
			# BSPWM CONFIGURACION DE ESCRITORIOS
			escritorios=
			IFS=':'
			set -- ${line#?}
			
			while [ $# -gt 0 ] ; do
			item=$1
			name=${item#?}
			case $item in
				[mM]*)
					case $item in
						m*)
							# ESCRITORIO OCUPADO NO SELECCIONADO
							FG=$COLOR_MONITOR_FG
							BG=$COLOR_MONITOR_BG
							on_focused_monitor=
							;;
						M*)
							# ESCRITORIO ACTIVO
							FG=$COLOR_FOCUSED_MONITOR_FG
							BG=$COLOR_FOCUSED_MONITOR_BG
							on_focused_monitor=1
							;;
							esac
							[ $num_mon -lt 2 ] && shift && continue
							escritorios="${escritorios}%{F${FG}}%{A:bspc monitor -f ${name}:} ${name} %{A}%{F-}"
							;;
							[fFoOuU]*)
							case $item in
						f*)
							# ESCRITORIO VACIO SELECIONADO
							FG=$COLOR_DEFAULT_FG
							BG=$COLOR_FREE_BG
							UL=$BG
							;;
						F*)
							if [ "$on_focused_monitor" ] ; then
							# ESCRITORIO VACIO SELECIONADO
							FG=$COLOR_FOCUSED_FREE_FG
							BG=$COLOR_FOCUSED_FREE_BG
							UL=$BG
							else
							# ESCRITORIO VACIO SELECIONADO
							FG=$COLOR_FREE_FG
							BG=$COLOR_FREE_BG
							UL=$COLOR_FOCUSED_FREE_BG
							fi
							;;
						o*)
							# ESCRITORIO OCUPADO SELECCIONADO
							FG=$COLOR_OCCUPIED_FG
							BG=$COLOR_OCCUPIED_BG
							UL=$BG
							;;
						O*)
							if [ "$on_focused_monitor" ] ; then
							# ESCRITORIO OCUPADO SELECIONADO
							FG=$COLOR_FOCUSED_OCCUPIED_FG
							BG=$COLOR_FOCUSED_OCCUPIED_BG
							UL=$BG
							else
							# ESCRITORIO OCUPADO SELECIONADO
							FG=$COLOR_OCCUPIED_FG
							BG=$COLOR_OCCUPIED_BG
							UL=$COLOR_FOCUSED_OCCUPIED_BG
							fi
							;;
						u*)
							# ESCRITORIO PARPADEANTE URGENTE
							FG=$COLOR_URGENT_FG
							BG=$COLOR_URGENT_BG
							UL=$BG
							;;
						U*)
							if [ "$on_focused_monitor" ] ; then
							# ESCRITORIO PARPADEANTE URGENTE
							FG=$COLOR_FOCUSED_URGENT_FG
							BG=$COLOR_FOCUSED_URGENT_BG
							UL=$BG
							else
							# ESCRITORIO PARPADEANTE URGENTE
							FG=$COLOR_URGENT_FG
							BG=$COLOR_URGENT_BG
							UL=$COLOR_FOCUSED_URGENT_BG
							fi
							;;
						esac
						escritorios="${escritorios}%{F${FG}}%{U${UL}}%{+u}%{A:bspc desktop -f ${name}:} ${name} %{A}%{F-}%{-u}"
						;;
					[LTG]*)
						# LAYOUT MODO DE VENTANAS EN UNA LETRA O DOS
						escritorios="${escritorios}%{F$COLOR_STATE_FG}%{F-}"
						;;
				esac
				shift
			done
			;;
	esac
	printf "%s\n" "%{l}  ${escritorios}${titulo}%{r}${systray}"
done
